<!-- Index.cshtml -->
@model IEnumerable<LibraryManagement.Models.Books>

<h1>Books List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Branch</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@(book.Author != null ? book.Author.Name : "N/A")</td>
                <td>@(book.LibraryBranch != null ? book.LibraryBranch.BranchName : "N/A")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> | 
                    <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
